<!DOCTYPE html>
<%#include "objects/election.h" %>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>

<h1>Listing Election</h1>

<%== linkTo("Create a new Election", urla("create")) %><br>
<br>
<table border="1" cellpadding="5" style="border: 1px #d0d0d0 solid; border-collapse: collapse;">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Body</th>
    <th>Polling Open</th>
    <th>Polling Close</th>
    <th>Result ID</th>
  </tr>
<% tfetch(QList<Election>, electionList); %>
<% for (const auto &i : electionList) { %>
  <tr>
    <td><%= i.id() %></td>
    <td><%= i.name() %></td>
    <td><%= i.body() %></td>
    <td><%= i.pollingOpen() %></td>
    <td><%= i.pollingClose() %></td>
    <td><%= i.resultId() %></td>
    <td>
      <%== linkTo("Show", urla("show", i.id())) %>
      <%== linkTo("Edit", urla("save", i.id())) %>
      <%== linkTo("Remove", urla("remove", i.id()), Tf::Post, "confirm('Are you sure?')") %>
    </td>
  </tr>
<% } %>
</table>

</body>
</html>
