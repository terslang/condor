<!DOCTYPE html>
<%#include "objects/option.h" %>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>

<h1>Listing Option</h1>

<%== linkTo("Create a new Option", urla("create")) %><br>
<br>
<table border="1" cellpadding="5" style="border: 1px #d0d0d0 solid; border-collapse: collapse;">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Body</th>
    <th>Election ID</th>
  </tr>
<% tfetch(QList<Option>, optionList); %>
<% for (const auto &i : optionList) { %>
  <tr>
    <td><%= i.id() %></td>
    <td><%= i.name() %></td>
    <td><%= i.body() %></td>
    <td><%= i.electionId() %></td>
    <td>
      <%== linkTo("Show", urla("show", i.id())) %>
      <%== linkTo("Edit", urla("save", i.id())) %>
      <%== linkTo("Remove", urla("remove", i.id()), Tf::Post, "confirm('Are you sure?')") %>
    </td>
  </tr>
<% } %>
</table>

</body>
</html>
