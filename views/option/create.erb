<!DOCTYPE html>
<%#include "objects/option.h" %>
<% tfetch(QVariantMap, option); %>
<% tfetch(QString, electionId); %>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>New Option</h1>

<%== formTag(urla("create"), Tf::Post) %>
  <p>
    <label>Name<br><input class="form-control" name="option[name]" value="<%= option["name"] %>" /></label>
  </p>
  <p>
    <label>Body<br><textarea class="form-control" name="option[body]" value="<%= option["body"] %>" ></textarea></label>
  </p>
  <p>
    <label>Election ID<br><input class="form-control" name="option[electionId]" value="<%= electionId.isEmpty() ? option["electionId"] : electionId %>" <%= electionId.isEmpty() ? "" : "readonly" %>/></label>
  </p>
  <p>
    <input type="submit" class="btn btn-primary" value="Create" />
  </p>
</form>

<%== linkTo("Back", urla("index")) %>

</body>
</html>
